{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "program": "${workspaceRoot}\\build\\src\\app.js",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": false,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        }
    ]
}